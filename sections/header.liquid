{% liquid
  assign logo = section.settings.logo
  assign menu = section.settings.menu
  assign searchBar = section.settings.enable_search
%}
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    {% if logo != blank %}
      <a class="navbar-brand" href="{{ shop.url }}">
        <img
          src="{{ logo | image_url: width: 200 }}"
          alt="{{ shop.name }}"
          style="height: 80px">
      </a>
    {% else %}
      <a class="navbar-brand" href="{{ shop.url }}">{{ shop.name }}</a>
    {% endif %}
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent"
      aria-expanded="false"
      aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        {% for link in menu.links %}
          <li class="nav-item {% if link.links.size > 0 %} dropdown {% endif %}">
            <a
              class="nav-link active {% if link.links.size > 0 %} dropdown-toggle {% endif %}"
              aria-current="page"
              href={{ link.url }}
              {% if link.links.size > 0 %}
              id="navbarDropdown_{{forloop.index}}"
              role="button"
              data-bs-toggle="dropdown"
              aria-expanded="false"
              {% endif %}>
              {{ link.title }}
            </a>
            {% if link.links.size > 0 %}
              <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                {% for dropLink in link.links %}
                  <li>
                    <a class="dropdown-item" href="{{dropLink.url}}">{{ dropLink.title }}</a>
                  </li>
                {% endfor %}
              </ul>
            {% endif %}
          </li>
        {% endfor %}

        <li class="nav-item">
          <a
            class="nav-link disabled"
            href="#"
            tabindex="-1"
            aria-disabled="true">Disabled</a>
        </li>
      </ul>
      {% if searchBar %}
        <form class="d-flex">
          <input
            class="form-control me-2"
            type="search"
            placeholder="Search"
            aria-label="Search">
          <button class="btn btn-outline-success" type="submit">Search</button>
        </form>
      {% endif %}
    </div>
  </div>
</nav>

{% schema %}
  {
    "name": "Header",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Select Logo",
        "info": "Recommended size 100 X 100"
      }, {
        "type": "link_list",
        "id": "menu",
        "label": "Select Menu"

      }, {
        "type": "header",
        "content": "Search Bar"
      }, {
        "type": "checkbox",
        "id": "enable_search",
        "default": true,
        "label": "Enable Search Bar"
      }


    ]
  }
{% endschema %}