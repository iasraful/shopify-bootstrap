<div
  id="carouselExampleCaptions"
  class="carousel slide"
  data-bs-ride="carousel">

  <div class="carousel-indicators">
    {% if section.blocks.size > 0 %}
      {% for block in section.blocks %}
        <button
          type="button"
          data-bs-target="#carouselExampleCaptions"
          data-bs-slide-to="{{ forloop.index0 }}"
          {% if forloop.index0 == 0 %}
          class="active"
          aria-current="true"
          {% else %}
          aria-current="false"
          {% endif %}
          aria-label="Slide {{ forloop.index }}"></button>
      {% endfor %}
    {% endif %}
  </div>

  <div class="carousel-inner">
    {% for block in section.blocks %}
      <div class="carousel-item {% if forloop.index0 == 0 %} active {% endif %} ">
        {% if block.settings.slider_img %}
          <img
            src="{{ block.settings.slider_img | image_url }}"
            class="d-block w-100"
            style="height: auto;"
            alt="{{ block.settings.slider_img.alt | escape }}">
        {% endif %}

        <div class="carousel-caption d-none d-md-block">
          <h5>{{ block.settings.caption_title }}</h5>
          <div class="">
            {{ block.settings.caption_text }}
          </div>
        </div>
      </div>
    {% endfor %}
  </div>

  {% if section.blocks.size > 1 %}
    <button
      class="carousel-control-prev"
      type="button"
      data-bs-target="#carouselExampleCaptions"
      data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button
      class="carousel-control-next"
      type="button"
      data-bs-target="#carouselExampleCaptions"
      data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  {% endif %}

</div>

{% comment %}  CSS {% endcomment %}
<style>
  .carousel-item::before {
    position: absolute;
    content: "";
    background-color: #0000;
    width: 100%;
    height: 100%;
  }
</style>
{% schema %}
  {
    "name": "Slide",
    "settings": [],
    "blocks": [
      {
        "type": "slider",
        "name": "Slider",
        "settings": [
          {
            "type": "image_picker",
            "id": "slider_img",
            "label": "Slider Image"
          }, {
            "type": "text",
            "id": "caption_title",
            "label": "Caption Title"
          }, {
            "type": "richtext",  //for long text we can also use "richtext"
            "id": "caption_text",
            "label": "Caption Text",
            "default":"<p>Hot sell is now...</p>"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Slide Show"
      }
    ]
  }
{% endschema %}